<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_appointment_lines_list" model="ir.ui.view">
        <field name="name">hospital.appointment.lines.list</field>
        <field name="model">hospital.appointment.lines</field>
        <field name="arch" type="xml">
            <list string="Appointments Line" editable="top">
                    <field name="appointment_id"/>
                    <field name="product_id"/>
                    <field name="qty" />
            </list>
        </field>
    </record>

    <record id="action_hospital_appointment_lines" model="ir.actions.act_window">
        <field name="name">Appointments Line</field>
        <field name="res_model">hospital.appointment.lines</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointments Line
            </p>
        </field>
    </record>

</odoo>
